{
  "name": "remove-comments",
  "displayName": "Remove Comments",
  "description": "Untuk menghapus komen di vscode",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.removeSingleLineComments",
    "onCommand:extension.removeMultiLineComments",
    "onCommand:extension.removeAllComments",
    "onCommand:extension.removeEmptyLines"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.removeSingleLineComments",
        "title": "Hapus Single-line Komentar"
      },
      {
        "command": "extension.removeMultiLineComments",
        "title": "Hapus Multi-line Komentar"
      },
      {
        "command": "extension.removeAllComments",
        "title": "Hapus Semua Komentar"
      },
      {
        "command": "extension.removeEmptyLines",
        "title": "Hapus Garis Kosong"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "extension.removeSingleLineComments",
          "group": "navigation",
          "when": "editorTextFocus"
        },
        {
          "command": "extension.removeMultiLineComments",
          "group": "navigation",
          "when": "editorTextFocus"
        },
        {
          "command": "extension.removeAllComments",
          "group": "navigation",
          "when": "editorTextFocus"
        },
        {
          "command": "extension.removeEmptyLines",
          "group": "navigation",
          "when": "editorTextFocus"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.98.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "eslint": "^9.21.0",
    "typescript": "^5.7.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
