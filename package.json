{
  "name": "mieburungdara-remove-comments",
  "displayName": "CM Remove Comments",
  "description": "Remove All Comments from file",
  "version": "1.0.3",
  "repository": {
    "type": "git",
    "url": "https://github.com/mieburungdara/remove-comments.git"
  },
  "publisher": "RezaFahmi",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [ 
    "onCommand:extension.removeSingleLineComments",
    "onCommand:extension.removeMultiLineComments",
    "onCommand:extension.removeAllComments",
    "onCommand:extension.removeEmptyLines"   
  ],
  "main": "./out/extension.js",
  "contributes": {
    "menus": {
      "editor/context": [
        {
          "command": "-",
          "group": "removeCommentsGroup"
        },
        {
          "command": "extension.removeSingleLineComments",
          "group": "removeCommentsGroup",
          "when": "editorTextFocus"
        },
        {
          "command": "extension.removeMultiLineComments",
          "group": "removeCommentsGroup",
          "when": "editorTextFocus"
        },
        {
          "command": "extension.removeAllComments",
          "group": "removeCommentsGroup",
          "when": "editorTextFocus"
        },
        {
          "command": "extension.removeEmptyLines",
          "group": "removeCommentsGroup",
          "when": "editorTextFocus"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "eslint": "^9.21.0",
    "typescript": "^5.7.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
